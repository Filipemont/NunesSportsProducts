@model ProdutoModel

@{
    ViewData["Title"] = "Confirmação de apagar produtos";
}

<div class="text-center">
    <h3>Realmente deseja apagar o produto (@Model.Nome;  Codigo: @Model.Id)</h3>
</div>

<div class="d-grid gap-2">
    <a class="btn btn-primary" asp-controller="Produto" asp-action="Index" role="button">Cancelar exculsão</a>
    <a class="btn btn-danger" asp-controller="Produto" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
</div>
