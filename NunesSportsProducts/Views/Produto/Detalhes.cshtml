@model ProdutoModel

@{
    ViewData["Title"] = "Detalhes de produtos";
}

<div class="text-center">
    <h1 class="display-4">Destalhes do Produto</h1>
</div>

<form asp-controller="Produto" asp-action="Detalhes">

    <input type="hidden" asp-for="Id">
    <div class="mb-3">
        <label for="produto" class="form-label">Nome do produto:</label>
        <p>@Model.Nome</p>
    </div>
    <div class="mb-3">
        <label class="form-label" for="preco">Preço:</label>
        <p>R$ @Model.Preco</p>
    </div>
    <div class="mb-3">
        <label for="descricaoCurta" class="form-label">Descrição curta:</label>
        <p>@Model.DescricaoCurta</p>
    </div>
    <div class="mb-3">
        <label class="form-label" for="descricaoCompleta">Descrição Completa:</label>
        <p>@Model.DescricaoCompleta</p>
    </div>
    <div class="d-grid gap-2">
        <a role="button" class="btn btn-primary" asp-route-id="@Model.Id" asp-controller="Produto" asp-action="Editar">Editar</a>
        <a class="btn btn-secondary" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
    </div>
</form>

